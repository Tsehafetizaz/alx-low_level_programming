# Compiler and Remove Command
CC := gcc
RM := rm -f

# Compiler Flags
CFLAGS := -Wall -Werror -Wextra -pedantic

# Name of the executable
NAME := school

# Source and Object files
SRC := $(wildcard *.c)
OBJ := $(SRC:.c=.o)

# Default rule
all: $(NAME)

# Linking
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Compiling
%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

# Cleaning rules
clean:
	$(RM) *~ *# $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

# Prevent make from processing filenames with the same name as rules
.PHONY: all clean fclean oclean re
